<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="id.ac.sttccirebon.student.ui.logout.LogoutFragment">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:alpha="0.2"
            app:srcCompat="@drawable/background"
            app:tint="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/no_internet_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/user_logout"
            app:tint="@color/colorPrimary" />

        <TextView
            android:id="@+id/no_internet_heading"
            style="@android:style/Widget.DeviceDefault.Light.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="#00FFFFFF"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Apakah Anda Yakin Untuk Keluar Akun ?"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textIsSelectable="true"
            android:textSize="20dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/ya_logout"
            style="@style/IconCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/login_button_bk">

                <TextView
                    android:id="@+id/textIsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="center"
                    android:text="Logout"
                    android:textAlignment="center"
                    android:textColor="@color/whiteTextColor"
                    android:textSize="18dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>